<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFC2C7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC2C7"
            android:id="@+id/linear"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_back" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store"
                android:textSize="25dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn"
                android:padding="15dp"
                android:text="15$ FOR A DOG PET"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn"
                android:padding="15dp"
                android:text="25$ FOR A Cat PET"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn"
                android:padding="15dp"
                android:text="150$ FOR A Bird PET"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRabbit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn"
                android:padding="15dp"
                android:text="200$ FOR A Rabbit PET"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSquirrel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn"
                android:padding="15dp"
                android:text="80$ FOR A Squirrel PET"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btndogCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn"
                android:padding="15dp"
                android:text="40 $ FOR DOG and cat PET"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRandum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:padding="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn"
                android:text="180$ FOR TWO PET randum"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</layout>